{
  "name": "server",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run typecheck && node --test -r ts-node/register \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "build:lambda": "npm run build:ts",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"test/**/*.ts\"",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build:lambda && serverless deploy",
    "migrate": "node -e \"require('./dist/lib/db').runMigration(require('fs').readFileSync('./migrations/001_battles.sql', 'utf8'))\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/aws-lambda": "^6.1.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@trpc/server": "^11.0.0-next-beta.327",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^24.0.8",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "fastify-cli": "^7.4.1",
    "fastify-tsconfig": "^3.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.4.0",
    "typescript": "~5.9.2"
  }
}
